#!/usr/bin/env bash
set -eo pipefail

YQ_VERSION=3.3.2
VENDORED_YQ="${YQ_BASE_URL}/mikefarah/yq/releases/download/${YQ_VERSION}/yq_linux_amd64"
if [[ ! -d /app/.heroku/miniconda/bin/yq ]]; then
  puts-step "Installing yq for .condarc modification"
  if ! curl -o /app/.heroku/miniconda/bin/yq -fv $VENDORED_MINICONDA ; then
      exit 1
  fi

  chmod +x /app/.heroku/miniconda/bin/yq
fi
